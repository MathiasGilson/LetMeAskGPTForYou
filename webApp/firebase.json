{
    "hosting": {
        "target": "webapp",
        "public": "dist",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**", "*.DS_Store"],
        "rewrites": [
            {
                "source": "/",
                "destination": "/index.html"
            },
            {
                "source": "**",
                "destination": "/app.html"
            }
        ],
        "headers": [
            {
                "source": "**/*.@(jpg|jpeg|gif|png)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=604800"
                    }
                ]
            }
        ]
    }
}
